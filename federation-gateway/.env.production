# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Server Configuration
PORT=4000
NODE_ENV=production

# JWT Configuration
# Use JWKS for JWT verification (recommended for production with RSA)
USE_JWKS=true
# Fallback JWT secret if JWKS is disabled (for HS256)
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_PRODUCTION_SECRET
JWT_EXPIRES_IN=1h

# Subgraph Services - Production URLs
AUTH_SERVICE_URL=http://auth-service:3000/graphql
NOTIFICATION_SERVICE_URL=http://notification-service:3002/graphql

# REST API Proxies - Production URLs
AUTH_REST_SERVICE_URL=http://auth-service:3000

# CORS Configuration - Add your production frontend URLs
CORS_ORIGIN=https://app.yourdomain.com,https://admin.yourdomain.com

# Logging
LOG_LEVEL=info

# Apollo Studio (Optional - for monitoring)
APOLLO_KEY=
APOLLO_GRAPH_REF=your-graph@production

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
SCHEMA_POLL_INTERVAL=30000

# Rate Limiting (Optional)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
