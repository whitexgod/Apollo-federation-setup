# Server Configuration
PORT=4000
NODE_ENV=development
GATEWAY_PORT=8080

# JWT Configuration
# Use JWKS for JWT verification (recommended for production with RSA)
USE_JWKS=true
# Fallback JWT secret if JWKS is disabled (for HS256)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h

# Federated GraphQL Subgraph Services
USERS_SERVICE_URL=http://users-service:3001/graphql
PRODUCTS_SERVICE_URL=http://products-service:3002/graphql

# REST API Services
ORDERS_SERVICE_URL=http://orders-service:3003

# Legacy/Optional Services (kept for backward compatibility)
AUTH_SERVICE_URL=http://localhost:3000/graphql
NOTIFICATION_SERVICE_URL=http://localhost:3002/graphql
AUTH_REST_SERVICE_URL=http://localhost:3000
MEDIA_SERVICE_URL=http://localhost:3001

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3001

# Logging
LOG_LEVEL=debug

# Apollo GraphQL Configuration
APOLLO_PLAYGROUND=true
APOLLO_INTROSPECTION=true

# Apollo Studio (Optional)
APOLLO_KEY=
APOLLO_GRAPH_REF=
